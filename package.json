{
  "name": "fonio",
  "version": "0.1.0",
  "description": "Quinoa story editor",
  "main": "dist/entry.js",
  "scripts": {
    "dev": "kotatsu serve --config ./webpack.config.js --progress --babel --index ./index.html --public ./ ./src/main.js",
    "build": "kotatsu build client ./src/main.js -o build --config ./webpack.config.js --babel --minify",
    "lint": "eslint --fix src",
    "comb": "csscomb src",
    "test": "mocha --compilers js:babel-core/register -R spec --recursive $(find src -name '*.spec.js')",
    "deploy": "npm run build && surge ./",
    "translations:backfill": "node backfillTranslations --locales ./src/translations/locales",
    "translations:discover": "node discoverTranslations --locales ./src/translations/locales --src ./src --namespacer translateNameSpacer --translatorFn translate",
    "translations:export:to:po": "node exportTranslationsToPo --locales ./src/translations/locales --dest ./translations",
    "translations:update:po": "node updateTranslationsToPo --locales ./src/translations/locales --dest ./translations",
    "translations:import:from:po": "node importTranslationsFromPo --locales ./src/translations/locales --src ./translations",
    "translations:update": "npm run translations:backfill;npm run translations:discover;npm run translations:update:po",
    "translations:addlanguage": "node addTranslationLanguage --translations-folder ./src/translations",
    "translations:gitaddpo": "git add translations"
  },
  "pre-commit": [
    "lint",
    "build",
    "comb",
    "test",
    "translations:update",
    "translations:gitaddpo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medialab/fonio.git"
  },
  "author": "Robin de Mourat <robin.demourat@sciencespo.fr> (https://github.com/robindemourat)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/medialab/fonio/issues"
  },
  "homepage": "https://github.com/medialab/fonio#readme",
  "dependencies": {
    "citation-js": "^0.3.0-5",
    "draft-convert": "^1.4.5",
    "draft-js": "^0.10.0",
    "draft-js-dnd-plugin": "^2.0.0-beta1",
    "draft-js-inline-toolbar-plugin": "^2.0.0-beta10",
    "draft-js-markdown-shortcuts-plugin": "^0.2.0",
    "draft-js-plugins": "git+https://github.com/robindemourat/draft-js-plugins/",
    "draft-js-plugins-editor": "^2.0.0-beta9",
    "draft-js-richbuttons-plugin": "^2.0.0",
    "draft-js-side-toolbar-plugin": "^2.0.0-beta10",
    "file-saver": "^1.3.3",
    "github-api": "^3.0.0",
    "json2po": "^1.0.5",
    "medium-draft": "^0.5.0",
    "pouchdb": "^6.0.7",
    "quinoa-presentation-player": "git+https://github.com/medialab/quinoa-presentation-player.git",
    "quinoa-story-player": "git+https://github.com/medialab/quinoa-story-player.git",
    "react": "^15.3.2",
    "react-citeproc": "git+https://github.com/robindemourat/react-citeproc.git",
    "react-csl": "git+https://github.com/robindemourat/react-citeproc.git",
    "react-dom": "^15.3.2",
    "react-dropzone": "^3.6.0",
    "react-markdown": "^2.4.2",
    "react-media-player": "^0.6.1",
    "react-modal": "^1.4.0",
    "react-redux": "^5.0.4",
    "react-textarea-autosize": "^4.0.5",
    "redux": "^3.6.0",
    "redux-i18n": "^1.1.4",
    "redux-pouchdb": "^0.1.1",
    "redux-thunk": "^2.1.0",
    "reselect": "^3.0.0",
    "superagent": "^3.2.1",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@yomguithereal/eslint-config": "^3.0.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "chai": "^3.5.0",
    "colors": "^1.1.2",
    "css-loader": "^0.28.0",
    "csscomb": "^4.0.1",
    "enzyme": "^2.4.1",
    "eslint": "^3.7.1",
    "eslint-plugin-react": "^7.0.1",
    "file-loader": "^0.11.1",
    "image-webpack-loader": "^3.3.0",
    "kotatsu": "^0.15.0",
    "mocha": "^3.1.0",
    "node-sass": "^4.5.2",
    "optimist": "^0.6.1",
    "po2json": "^0.4.5",
    "pre-commit": "^1.1.3",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.3.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.17.0",
    "wrench": "^1.5.9"
  },
  "babel": {
    "plugins": [
      "transform-decorators-legacy",
      "transform-decorators",
      "transform-object-rest-spread",
      "transform-class-properties"
    ],
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@yomguithereal/eslint-config/es7",
      "@yomguithereal/eslint-config/react"
    ]
  }
}
